<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.movieReviews"
    android:versionCode="6"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.movieReviews.VolleyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.movieReviews.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.movieReviews.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.android.movieReviews.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.movieReviews.SignUp" >
        </activity>
        <activity android:name="com.android.movieReviews.SqlView" >
        </activity>
        <activity android:name="com.android.movieReviews.MainActivity" >
        </activity>
        <activity android:name="com.android.movieReviews.MovieActivity" >
        </activity>
        <activity android:name="com.android.movieReviews.InduvidualReviewActivity" >
        </activity>
        <activity android:name="com.android.movieReviews.WriteReviewActivity" >
        </activity>
        <activity android:name="com.android.movieReviews.MovieInfoView" >
        </activity>
        <activity android:name="com.android.movieReviews.AllRatingsReviewsInfoView" >
        </activity>
    </application>

</manifest>