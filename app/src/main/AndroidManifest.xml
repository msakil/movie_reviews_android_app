<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.movieReviews"
      android:versionCode="6"
      android:versionName="1.0.0">
    <uses-sdk android:minSdkVersion="21" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:icon="@drawable/logo_launcher"
        android:name=".VolleyApplication"
        android:allowBackup="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".Splash"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" android:label="@string/app_name" >
          <intent-filter>
            <action android:name="com.android.movieReviews.LOGIN" />
            <category android:name="android.intent.category.DEFAULT" />
          </intent-filter>
        </activity>
        <activity android:name=".SignUp">
        </activity>
        <activity android:name=".SqlView">
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".MovieActivity">
        </activity>
        <activity android:name=".InduvidualReviewActivity">
        </activity>
        <activity android:name=".WriteReviewActivity">
        </activity>
        <activity android:name=".MovieInfoView">
        </activity>
        <activity android:name=".AllRatingsReviewsInfoView">
        </activity>
    </application>
</manifest>
